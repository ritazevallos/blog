<% provide(:title, "Edit post: #{@post.title}") %>
<h1>Edit post: <%= @post.title %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :content %>
        <%= f.text_area :content %>

        <%= f.submit "Save changes", class: "btn btn-large" %>
    <% end %>

  </div>
</div>